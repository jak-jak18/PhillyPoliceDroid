<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >



            <LinearLayout
                android:id="@+id/DistrictIfoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/DistrictInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="12th District"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="District Headquarters"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/DistrictInfoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="2342 Whitaker Ave" />

                <TextView
                    android:id="@+id/DistrictCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/DistictInfoPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="215-345-1233 " />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/badgelogo"
                android:alpha="0.2"
                android:layout_below="@+id/DistrictIfoLayout1"
                android:layout_alignParentTop="true"
                android:orientation="vertical"></LinearLayout>

            <RelativeLayout
                android:id="@+id/PSABannerLayout"
                android:layout_below="@+id/DistrictIfoLayout1"
                android:layout_width="fill_parent"
                android:background="#000000"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00F0FF"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Police Service Area" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/DistrictIfoLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DistrictIfoLayout"
                android:layout_marginBottom="10px"
                android:layout_marginTop="20px" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:text="District Captain" />

                <TextView
                    android:id="@+id/DistrictInfoCaptain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:text="Michael Rivera" />

                <TextView
                    android:id="@+id/DistrictInfoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/DistrictInfoCaptain"
                    android:layout_gravity="center"
                    android:text="police.co_25@philasd.gov" />

                <ImageView
                    android:id="@+id/DistrictInfoImageView"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10px"
                    android:scaleType="fitCenter"
                    android:layout_below="@+id/DistrictInfoEmail"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/DistrictInfoRowLayout"
                android:layout_below="@+id/PSABannerLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/CalendarBannerLayout"
                android:layout_below="@+id/DistrictInfoRowLayout"
                android:layout_width="fill_parent"
                android:background="#000000"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:textColor="#00F0FF"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="District Calendar" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/DistrictInfoCalendar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CalendarBannerLayout"
                android:orientation="vertical">


            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/DistrictInfoCalendar"
                android:visibility="gone"
                android:id="@+id/NothinSch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Currently no scheduled events" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>