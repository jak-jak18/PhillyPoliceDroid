<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">


    <RelativeLayout
        android:id="@+id/itembmklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/Imageview_usm_bmrk_row"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/badgelogo" />

        <TextView
            android:id="@+id/VictimName_bmrkrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/Imageview_usm_bmrk_row"
            android:layout_toEndOf="@+id/Imageview_usm_bmrk_row"
            android:text="JoHdfgdfg DOeddkjfk" />

        <TextView
            android:id="@+id/DistrictNum_bmrk_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/VictimName_bmrkrow"
            android:padding="5dp"
            android:layout_toEndOf="@+id/Imageview_usm_bmrk_row"
            android:text="22nd District" />

        <TextView
            android:id="@+id/DCnumber_bmrk_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/DistrictNum_bmrk_row"
            android:layout_toEndOf="@+id/Imageview_usm_bmrk_row"
            android:text="DC# 19-39-493-3434" />

        <TextView
            android:id="@+id/Description_bmrk_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_below="@+id/Imageview_usm_bmrk_row"
            android:layout_alignStart="@+id/Imageview_usm_bmrk_row"
            android:text="TExtView" />

        <TextView
            android:id="@+id/Date_usm_bmrk_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/Description_bmrk_row"
            android:text="Tue Nov 19, 2019" />






    </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>